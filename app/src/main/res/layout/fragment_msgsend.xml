<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.send_msg.MsgSendFragment">

    <EditText
        android:id="@+id/msg_user"
        android:layout_width="259dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="@+id/msg_avatar"
        app:layout_constraintStart_toEndOf="@+id/msg_avatar"
        app:layout_constraintTop_toTopOf="@+id/msg_avatar" />

    <Button
        android:id="@+id/msg_send"
        android:layout_width="324dp"
        android:layout_height="53dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#FFC107"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/msg_avatar"
        android:layout_width="60dp"
        android:layout_height="63dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/text_dashboard"
        android:layout_width="327dp"
        android:layout_height="357dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_image1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_avatar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="227dp"
        android:layout_height="45dp"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/msg_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_avatar"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/msg_sel_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_image1" />

        <Button
            android:id="@+id/msg_sel_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_image2" />

        <Button
            android:id="@+id/msg_sel_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_image3" />

        <Button
            android:id="@+id/msg_sel_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_image4" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>